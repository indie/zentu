<div class="span4">

      <% if signed_in? %>

        <%= render 'shared/citizen_info' %>
        <%= render 'shared/stats' %>

        <div class="btn btn-primary"><%= link_to 'Contribute', root_path %></div>

      <div id="tag_cloud">
        <% tag_cloud Idea.tag_counts, %w{t s m l} do |tag, css_class| %>
          <%= link_to tag.name, tag_path(tag.name), class: css_class %>
        <% end %>
      </div>


      <% else %>


      <div id="tag_cloud">

        <% tag_cloud Idea.tag_counts, %w{t s m l} do |tag, css_class| %>
          <%= link_to tag.name, tag_path(tag.name), class: css_class %>
        <% end %>
      </div>

   <% end %>

  
  </div>

  <div class="span5">
     <div class="feed">
        <h1>Recent Contributions</h1>
      </div>

      <%= render 'shared/global_feed' %>
      
    </div>


