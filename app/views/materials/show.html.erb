
<ul id="tabbers">
  <% Material.roots.each do |material| %>
  <li><%= link_to material.name, material, class: ("active" if @material.root == material) %></li>
  <% end %>
</ul>


<div class="span12">

  <div class="user_header">
    <%= link_to 'Back', materials_path %> <br />

      <% if current_citizen %>
        Logged in as: <%= current_citizen.email %>
       <% end %>

  </div>


    <br />

<div id="productland">
<div class="row">
  <div class="span12">

  </div>
  <div class="span12">
    <div style="padding:0 15px">
      <div class="row-fluid">
        <div class="span2">

              <h4>Navigation</h4>
                
              <div id="breadcrumbs">
                <h5><% @material.ancestors.each do |material| %></h5>
                  <%= link_to material.name, material %> &gt;
                <% end %>
              </div>

                <%= render 'submenu_materials', materials: @material.root.descendants.arrange %>

                <p></p>
                <div class="byline"> 
                  <a rel="license" href="http://creativecommons.org/licenses/by-nc-sa/4.0/"><img alt="Creative Commons License" style="border-width:0" src="https://i.creativecommons.org/l/by-nc-sa/4.0/88x31.png" /></a><br />This work is licensed under a <a rel="license" href="http://creativecommons.org/licenses/by-nc-sa/4.0/">Creative Commons Attribution-NonCommercial-ShareAlike 4.0 International License</a>.
                </div>

 
              
        </div><!-- end span3 -->
      
      <div class="span7">
        <h3><%= @material.name %></h3>
            
        <%= markdown @material.description %>
            
            <p>
                   <% if current_citizen && current_citizen.admin? %>  

                    <%= link_to 'Edit', edit_material_path(@material) %> 
                
                  <% end %>    

            </p>
                   
        </div>
                
        <div class="span1"> 

          <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
          <!-- Ecosteader Eyes -->
          <ins class="adsbygoogle"
               style="display:inline-block;width:120px;height:600px"
               data-ad-client="ca-pub-1067848072259866"
               data-ad-slot="6688911612"></ins>
          <script>
          (adsbygoogle = window.adsbygoogle || []).push({});
          </script>
        </div>


      </div>
    </div>
  </div>
</div>
</div>

</div>
